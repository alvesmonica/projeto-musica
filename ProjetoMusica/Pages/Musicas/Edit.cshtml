@page
@model ProjetoMusica.Pages.Musicas.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Musica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Musica.Id" />
            <div class="form-group">
                <label asp-for="Musica.Title" class="control-label"></label>
                <input asp-for="Musica.Title" class="form-control" />
                <span asp-validation-for="Musica.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Musica.Singer" class="control-label"></label>
                <input asp-for="Musica.Singer" class="form-control" />
                <span asp-validation-for="Musica.Singer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Musica.Album" class="control-label"></label>
                <input asp-for="Musica.Album" class="form-control" />
                <span asp-validation-for="Musica.Album" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Musica.Wheretofind" class="control-label"></label>
                <input asp-for="Musica.Wheretofind" class="form-control" />
                <span asp-validation-for="Musica.Wheretofind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Musica.Rate" class="control-label"></label>
                <input asp-for="Musica.Rate" class="form-control" />
                <span asp-validation-for="Musica.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
